<%- include ("partials/header") %>
<div class = "container">
	<div class = "row">
		<div style = "width: 30%; margin: 30px auto;">
			<h1 style = "text-align: center;">Edit <%= memory.title%></h1>
			<form action = "/memories/<%= memory._id%>?_method=PUT" method="POST">
				<div class = "form-group">
					<input class = "form-control" type="text" name="memory[title]" value = "<%= memory.title%>">
				</div>
				<div class = "form-group">
					<input class = "form-control" type="text" name="memory[image]" value = "<%= memory.image%>">
				</div>
				<div class = "form-group">
					<textarea class = "form-control" type="text" name="memory[description]"><%= memory.description %></textarea>
				</div>
				<div class = "form-group">
					<button class = "btn btn-lg btn-primary btn-block">Submit</button>
				</div>
				
				
			</form>
			<a href="/memories/<%= memory._id%>">Go Back</a>
		</div>
	</div>
</div>

<%- include ("partials/footer") %>
